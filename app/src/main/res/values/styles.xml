<resources>
    
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <!--    <style name="AppTheme.Transparent" parent="AppTheme">-->
    <!--        <item name="windowActionBarOverlay">true</item>-->
    <!--        <item name="android:windowTranslucentStatus">true</item>-->
    <!--    </style>-->
    
    <style name="AppTheme.Toolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>
    
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/campton_book</item>
    </style>
    
    <style name="AppTheme.Headline" parent="AppTheme.FontStandard">
        <item name="android:textSize">17sp</item>
    </style>
    
    <style name="AppTheme.HeadlineBold" parent="AppTheme.FontBold">
        <item name="android:textSize">17sp</item>
    </style>
    
    <style name="AppTheme.FontStandard" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/campton_book</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="AppTheme.FontBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/campton_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="AppTheme.Head" parent="AppTheme.FontStandard">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="AppTheme.HeadBold" parent="AppTheme.FontBold">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="AppTheme.Subhead" parent="AppTheme.FontStandard">
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="AppTheme.SubheadBold" parent="AppTheme.FontBold">
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="AppTheme.Callout" parent="AppTheme.FontStandard">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="AppTheme.CalloutBold" parent="AppTheme.FontBold">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="AppTheme.Footnote" parent="AppTheme.FontStandard">
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="AppTheme.FootnoteBold" parent="AppTheme.FontBold">
        <item name="android:textSize">13sp</item>
    </style>

</resources>
