<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clip_item_container"
    android:layout_width="160dp"
    android:layout_height="200dp"
    android:layout_marginStart="@dimen/list_item_margin"
    android:layout_marginTop="@dimen/list_item_margin"
    android:layout_marginEnd="@dimen/list_item_margin"
    app:cardBackgroundColor="#44000000"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            android:id="@+id/track_cover"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:srcCompat="@tools:sample/backgrounds/scenic[14]" />
        
        <ImageView
            android:id="@+id/track_action_play"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_icon_play"
            app:layout_constraintBottom_toBottomOf="@id/track_cover"
            app:layout_constraintEnd_toEndOf="@id/track_cover"
            app:layout_constraintStart_toStartOf="@id/track_cover"
            app:layout_constraintTop_toTopOf="@id/track_cover"
            tools:ignore="ContentDescription" />
        
        <TextView
            android:id="@+id/track_title"
            style="@style/AppTheme.Footnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/track_cover"
            tools:text="Stairways to Heaven asd asd asd" />
    
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>